<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>New Recipe</title>
</head>

<body>
  <%- include('../partials/_nav.ejs') %>
  <form action="/recipes" method="POST">
    <input type="text" name="name" id="name" placeholder="Recipe Name"><br>
    <textarea name="instruction" id="instruction" cols="30" rows="10" placeholder="Instructions"></textarea><br>
    <p>Choose ingredients:</p>
    <% ingredients.forEach(ingredient => { %>
    <label>
      <input type="checkbox" name="ingredients" value="<%= ingredient._id %>">
      <%= ingredient.name %>
    </label><br>
    <% }) %>
    <button type="submit">Add Recipe</button>
  </form>
  <h2>Add new Ingredients</h2>
  <form action="/ingredients" method="post">
    <input type="text" name="name" id="name" placeholder="ingredient Name">
    <button type="submit">Add Ingredient</button>
  </form>
</body>

</html>